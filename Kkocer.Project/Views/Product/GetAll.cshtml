@using Kkocer.Project.Entities.Concrete
@model List<Product>
@{
    Layout = null;
}
<!DOCTYPE html>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <div class=" p-5 w-50 m-0">
        <a href="/Product/Add" class="btn btn-success">Add Product</a>

    </div>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Category Id</th>
            <th>Ad</th>
            <th>Birim Fiyatı</th>
            <th>Stok</th>
            <th>Actions</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.CategoryId</td>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.UnitsInStock</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
<br />
</html>